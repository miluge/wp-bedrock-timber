{% extends "base.twig" %}

{% block content %}
<div>
    {% if post.meta('top_story') %}
        {% set top = post.meta('top_story') %}
        <div class="bg-white overflow-hidden w-full shadow mb-6 mt-4 rounded-lg">
            <img src="{{ top.thumbnail.src }}" alt="People" class="w-full object-cover h-32 sm:h-48 md:h-64 rounded-t-lg">
            <div class="p-4 md:p-6">
              <p class="text-blue-500 font-semibold text-xs mb-1 leading-none">{{ top.category}}</p>
              <h3 class="font-semibold mb-2 text-xl leading-tight sm:leading-normal">{{ top.title }}</h3>
              <div class="text-sm flex items-center">
                <svg class="opacity-75 mr-2" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" width="12" height="12" viewBox="0 0 97.16 97.16" style="enable-background:new 0 0 97.16 97.16;" xml:space="preserve">
                  <path d="M48.58,0C21.793,0,0,21.793,0,48.58s21.793,48.58,48.58,48.58s48.58-21.793,48.58-48.58S75.367,0,48.58,0z M48.58,86.823    c-21.087,0-38.244-17.155-38.244-38.243S27.493,10.337,48.58,10.337S86.824,27.492,86.824,48.58S69.667,86.823,48.58,86.823z"/>
                  <path d="M73.898,47.08H52.066V20.83c0-2.209-1.791-4-4-4c-2.209,0-4,1.791-4,4v30.25c0,2.209,1.791,4,4,4h25.832    c2.209,0,4-1.791,4-4S76.107,47.08,73.898,47.08z"/>
                </svg>
                <p class="leading-none">21 Oct 2019</p>
              </div>
            </div>
          </div>
            {# <a href="{{ top.link }}">{{ top.title}}</a>
            <p>{{ top.preview.length(50).read_more('Continue Reading')}}</p> #}
    {% endif %}


    {% if post.meta('featured_news') %}
        {% set feat = post.meta('featured_news') %}
    <div class="flex -mr-2 -ml-2 mb-6">
        {% for news in feat %}
        <div class="bg-white overflow-hidden border-b-4 border-gray-500 w-1/4 p-2">
            <img src="{{ news.thumbnail.src }}" alt="People" class="w-full object-cover h-32 sm:h-48 md:h-64 rounded-t-lg">
            <div class="p-4 md:p-6">
              <p class="text-blue-500 font-semibold text-xs mb-1 leading-none">{{ news.category }}</p>
              <h3 class="font-semibold mb-2 text-xl leading-tight sm:leading-normal">{{ news.title }}</h3>
              <div class="text-sm flex items-center">
                <svg class="opacity-75 mr-2" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" width="12" height="12" viewBox="0 0 97.16 97.16" style="enable-background:new 0 0 97.16 97.16;" xml:space="preserve">
                  <path d="M48.58,0C21.793,0,0,21.793,0,48.58s21.793,48.58,48.58,48.58s48.58-21.793,48.58-48.58S75.367,0,48.58,0z M48.58,86.823    c-21.087,0-38.244-17.155-38.244-38.243S27.493,10.337,48.58,10.337S86.824,27.492,86.824,48.58S69.667,86.823,48.58,86.823z"/>
                  <path d="M73.898,47.08H52.066V20.83c0-2.209-1.791-4-4-4c-2.209,0-4,1.791-4,4v30.25c0,2.209,1.791,4,4,4h25.832    c2.209,0,4-1.791,4-4S76.107,47.08,73.898,47.08z"/>
                </svg>
                <p class="leading-none">{{ news.date }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
    </div>
    {% endif %}

    <div class="w-full lg:flex mb-6">
        <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('https://tailwindcss.com/img/card-left.jpg')" title="Woman holding a mug">
        </div>
        <div class="border-r border-b border-l border-grey-light lg:border-l-0 lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
          <div class="mb-8">
            <p class="text-sm text-grey-dark flex items-center">
              <svg class="text-grey w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z" />
              </svg>
              Members only
            </p>
            <div class="text-black font-bold text-xl mb-2">Can coffee make you a better developer?</div>
            <p class="text-grey-darker text-base">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptatibus quia, nulla! Maiores et perferendis eaque, exercitationem praesentium nihil.</p>
          </div>
          <div class="flex items-center">
            <img class="w-10 h-10 rounded-full mr-4" src="https://pbs.twimg.com/profile_images/885868801232961537/b1F6H4KC_400x400.jpg" alt="Avatar of Jonathan Reinink">
            <div class="text-sm">
              <p class="text-black leading-none">Jonathan Reinink</p>
              <p class="text-grey-dark">{{ fe}}</p>
            </div>
          </div>
        </div>
      </div>

{% endblock content %}