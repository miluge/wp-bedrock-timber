{% extends "base.twig" %}

{% block content %}



{% for post in posts %}

<div class="w-full lg:flex mb-6 pt-4">
  <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('{{ post.thumbnail.src }}')" title="Woman holding a mug">
  </div>
  <div class="border-r border-b border-l border-grey-light lg:border-l-0 lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <a class="text-black font-bold text-xl mb-2">{{ post.post_title }}</a>
      <p class="text-grey-darker text-base">{{ post.content|excerpt(50)}}</p>
    </div>
    <div class="flex items-center">
      <div class="text-sm">
        <p class="text-black leading-none pb-2">{{ post.author }}</p>
        <p class="text-grey-dark">{{ post.date }}</p>
      </div>
    </div>
  </div>
</div>
{% endfor %}

{% endblock content %}
