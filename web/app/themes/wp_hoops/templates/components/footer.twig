<div class="w-full  bg-gray-500 " style="
background-blend-mode: multiply;
  background-position: center;
  background-image: url('https://images.unsplash.com/photo-1504450758481-7338eba7524a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80');
">
  <div class=" p-10  py-20  flex  flex-col  flex-wrap  justify-center  content-center">
    <div class=" m-0  p-0  text-3xl  text-white  antialiased  text-center">Abonnez-vous</div>
    <div class=" m-0  p-0  text-xl  text-white  antialiased  text-center">Lorem ipsum</div>
    <div class=" mt-3  flex  flex-row  flex-wrap">
      <input type="text" class=" text-gray-600  w-2/3  p-2  rounded-l-lg" placeholder="john@mail.com"/>
      <button class=" p-2  w-1/3  bg-indigo-400  rounded-r-lg  text-white hover: bg-indigo-300" type="button">Subscribe</button>
    </div>
  </div>
</div>

<div class="container mx-auto px-6">

    <div class="sm:flex sm:mt-8">
        <div class="mt-8 sm:mt-0 sm:w-full sm:px-8 flex flex-col md:flex-row justify-between">
            <div class="flex flex-col">
                <span class="font-bold text-gray-700 uppercase mb-2">Articles</span>
                {% for post in posts|slice(0, 4) %}
                <span class="my-2"><a href="{{ post.link }}" class="text-gray-700  text-md hover:text-blue-500">{{ post.title|slice(0, 25) }}</a></span>
                {% endfor %}
            </div>
            <div class="flex flex-col">
                <span class="font-bold text-gray-700 uppercase mt-4 md:mt-0 mb-2">A propos</span>
                <span class="my-2"><a href="#" class="text-gray-700 text-md hover:text-blue-500">Qui sommes nous ?</a></span>
                <span class="my-2"><a href="#" class="text-gray-700  text-md hover:text-blue-500">Politique de confidentialité</a></span>
                <span class="my-2"><a href="#" class="text-gray-700 text-md hover:text-blue-500">Contact</a></span>
            </div>
            <div class="flex flex-col">
                <span class="font-bold text-gray-700 uppercase mt-4 md:mt-0 mb-2">Social</span>
                <span class="my-2"><a href="#" class="text-gray-700  text-md hover:text-blue-500"><i class="fab fa-facebook fa-2x align-middle"></i></a></span>
                <span class="my-2"><a href="#" class="text-gray-700  text-md hover:text-blue-500"><i class="fab fa-youtube fa-2x align-middle"></i></a></span>
                <span class="my-2"><a href="#" class="text-gray-700  text-md hover:text-blue-500"><i class="fab fa-twitter fa-2x align-middle"></i></a></span>
            </div>
        </div>
    </div>
</div>
<div class="container mx-auto px-6">
    <div class="mt-16 border-t-2 border-gray-300 flex flex-col items-center">
        <div class="sm:w-2/3 text-center py-6">
            <p class="text-lg text-gray-700  mb-2">
                <a href="https://github.com/miluge">© {{"now"|date('Y')}} by Guillaume Blondel &nbsp;<i class="fab fa-github fa-2xl"></i></a>
            </p>
        </div>
    </div>
</div>